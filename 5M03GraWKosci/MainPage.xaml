<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_5M03GraWKosci.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label 
                Text="Gra w kości. Autor: Daniel" 
                BackgroundColor="brown" 
                TextColor="white" 
                FontSize="Large"
                />
            <Button 
                Text="RZUĆ KOŚCMI" 
                HorizontalOptions="Center" 
                BackgroundColor="Chocolate"
                Clicked="btnRzutClicked"
                />
            <HorizontalStackLayout BackgroundColor="white" HorizontalOptions="Center">
                <Image Source="empty.png" x:Name="imgKosc1"/>
                <Image Source="empty.png" x:Name="imgKosc2"/>
                <Image Source="empty.png" x:Name="imgKosc3"/>
                <Image Source="empty.png" x:Name="imgKosc4"/>
                <Image Source="empty.png" x:Name="imgKosc5"/>
            </HorizontalStackLayout>
            <Label 
                Text="Wynik tego losowania: 0" 
                x:Name="lblWynikLos" 
                HorizontalTextAlignment="Center"
                FontSize="40"
                />
            <Label 
                Text="Wynik całej gry: 0" 
                x:Name="lblWynikGra" 
                HorizontalTextAlignment="Center"
                />
            <Button 
                Text="RESETUJ WYNIK" 
                BackgroundColor="Chocolate" 
                HorizontalOptions="Center"
                Clicked="btnResetGraClicked"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
